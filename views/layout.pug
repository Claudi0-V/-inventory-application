doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
        h1 Inventory
        ul
            li
              a(href="/categories") Categories
            if isAuth
              li
                  a(href="/categories/new-category") New Category
            li
              a(href="/items") Items
            if isAuth
              li
                  a(href="/items/new-item") New Item
        if !isAuth 
          a(href="/user/login") Login
        if isAuth
          a(href="/user/logout") Logout
    block content
