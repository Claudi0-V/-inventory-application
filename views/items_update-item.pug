extends layout

block content
    h1 New category
    form(role='form' method='POST' action=`/items/${item._id}/update`)
        label(for="category-name") Name:
        input(type="text" name="name" id="item-name" required="true" minlength=3 maxlength=50, value=item.name)
        label(for="item-description") Description:
        input(type="text" name="description" id="item-description" required="true" minlength=10 maxlength=150 value=item.description)
        label(for="category") Category:
        select(id="category" name="category" selected="" value=item.category)
            each category in categories
                option(value=`${category._id}`)= category.name
        label(for="price") Price:
        input(type="number" name="price"  id="price" required="true" min=2 value=item.price)
        label(for="stock_quantity") Quantity:
        input(type="number" name="stock_quantity"  id="stock_quantity" required="true" min=0 value=item.stock_quantity)

        button(type="submit") update


